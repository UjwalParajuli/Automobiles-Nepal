<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar_fragment_profile"
        layout="@layout/toolbar"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_below="@id/toolbar_fragment_profile"
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/profile_layout"
                    android:layout_width="0dp"
                    android:layout_height="250dp"
                    android:layout_marginStart="33dp"
                    android:layout_marginEnd="33dp"
                    android:background="@color/button_color"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView79"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/coco_gothic_bold"
                            android:text="Hello,"
                            android:textColor="@color/white"
                            android:textSize="36dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/text_view_profile_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="TextView"
                            android:textColor="@color/white"
                            android:textSize="18dp"
                            app:layout_constraintEnd_toEndOf="@+id/textView79"
                            app:layout_constraintStart_toStartOf="@+id/textView79"
                            app:layout_constraintTop_toBottomOf="@+id/textView79" />

                        <TextView
                            android:id="@+id/text_view_profile_details"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="TextView"
                            android:textColor="@color/white"
                            android:textSize="18dp"
                            app:layout_constraintEnd_toEndOf="@+id/textView79"
                            app:layout_constraintStart_toStartOf="@+id/textView79"
                            app:layout_constraintTop_toBottomOf="@+id/text_view_profile_name" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="\u00a9 Automobiles Nepal | Developed by Bibek Chhetri"
                            android:textColor="@color/white"
                            android:textSize="12dp"
                            android:fontFamily="@font/coco_gothic_regular"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/menu_layout_fragment_profile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="33dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginEnd="33dp"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/profile_layout">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView22"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/coco_gothic_bold"
                            android:text="Menu"
                            android:textColor="@color/login_credentials_heading"
                            android:textSize="20dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/text_view_notifications"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Notifications"
                            android:textColor="@color/login_credentials_heading"
                            android:textSize="16dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView22" />

                        <TextView
                            android:id="@+id/text_view_edit_profile"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Edit Profile"
                            android:textColor="@color/login_credentials_heading"
                            android:textSize="16dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/divider9" />

                        <TextView
                            android:id="@+id/text_view_edit_password"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Change Password"
                            android:textColor="@color/login_credentials_heading"
                            android:textSize="16dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/divider1" />

                        <TextView
                            android:id="@+id/text_view_my_bookings"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="My Bookings"
                            android:textColor="@color/login_credentials_heading"
                            android:textSize="16dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/divider4" />

                        <TextView
                            android:id="@+id/text_view_my_vehicles"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="My Vehicles"
                            android:textColor="@color/login_credentials_heading"
                            android:textSize="16dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/divider2" />

                        <TextView
                            android:id="@+id/text_view_logout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Logout"
                            android:textColor="@color/login_credentials_heading"
                            android:textSize="16dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/divider3" />

                        <View
                            android:id="@+id/divider9"
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_marginTop="12dp"
                            android:background="@color/color_E3E3E3"
                            app:layout_constraintEnd_toEndOf="@id/text_view_notifications"
                            app:layout_constraintStart_toStartOf="@id/text_view_notifications"
                            app:layout_constraintTop_toBottomOf="@+id/text_view_notifications" />

                        <View
                            android:id="@+id/divider1"
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_marginTop="12dp"
                            android:background="@color/color_E3E3E3"
                            app:layout_constraintEnd_toEndOf="@id/text_view_edit_profile"
                            app:layout_constraintStart_toStartOf="@id/text_view_edit_profile"
                            app:layout_constraintTop_toBottomOf="@+id/text_view_edit_profile" />

                        <View
                            android:id="@+id/divider4"
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_marginTop="12dp"
                            android:background="@color/color_E3E3E3"
                            app:layout_constraintEnd_toEndOf="@id/text_view_edit_password"
                            app:layout_constraintStart_toStartOf="@id/text_view_edit_password"
                            app:layout_constraintTop_toBottomOf="@+id/text_view_edit_password" />

                        <View
                            android:id="@+id/divider2"
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_marginTop="12dp"
                            android:background="@color/color_E3E3E3"
                            app:layout_constraintEnd_toEndOf="@id/text_view_my_bookings"
                            app:layout_constraintStart_toStartOf="@id/text_view_my_bookings"
                            app:layout_constraintTop_toBottomOf="@+id/text_view_my_bookings" />

                        <View
                            android:id="@+id/divider3"
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_marginTop="12dp"
                            android:background="@color/color_E3E3E3"
                            app:layout_constraintEnd_toEndOf="@id/text_view_my_vehicles"
                            app:layout_constraintStart_toStartOf="@id/text_view_my_vehicles"
                            app:layout_constraintTop_toBottomOf="@+id/text_view_my_vehicles" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>