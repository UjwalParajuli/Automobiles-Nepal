                            android:id="@+id/text_view_price_new_bike_details"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Price"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="14dp"
                            android:textColor="@color/button_color"
                            app:layout_constraintEnd_toStartOf="@+id/image_view_bookmarked_new_bike_details"
                            app:layout_constraintStart_toStartOf="@+id/text_view_brand_name_new_bike_details"
                            app:layout_constraintTop_toBottomOf="@id/text_view_brand_name_new_bike_details" />

                        <TextView
                            android:id="@+id/textView83"
