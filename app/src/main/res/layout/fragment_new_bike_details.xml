                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/coco_gothic_bold"
                            android:text="No. of Cylinders : "
                            android:textColor="@color/login_credentials_heading"
                            android:textSize="14dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView91" />

                        <TextView
                            android:id="@+id/text_view_no_of_cylinders_new_bike_details"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="TextView"
                            android:textColor="@color/color_575757"
                            android:textSize="12dp"
                            app:layout_constraintBottom_toBottomOf="@id/textView92"
