                            android:fontFamily="@font/coco_gothic_bold"
                            android:text="Rear Brake : "
                            android:textColor="@color/login_credentials_heading"
                            android:textSize="14dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView89" />

                        <TextView
                            android:id="@+id/text_view_rear_brake_new_bike_details"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="TextView"
                            android:textColor="@color/color_575757"
                            android:textSize="12dp"
                            app:layout_constraintBottom_toBottomOf="@id/textView90"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/textView90"
                            app:layout_constraintTop_toTopOf="@id/textView90" />

                        <TextView
                            android:id="@+id/textView91"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/coco_gothic_bold"
                            android:text="Engine Type : "
                            android:textColor="@color/login_credentials_heading"
                            android:textSize="14dp"
