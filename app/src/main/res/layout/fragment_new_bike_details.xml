                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="@id/text_view_brand_name_new_bike_details"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/text_view_brand_name_new_bike_details"
