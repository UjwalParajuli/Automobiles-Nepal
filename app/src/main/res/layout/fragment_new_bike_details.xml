                            app:layout_constraintStart_toEndOf="@+id/textView92"
                            app:layout_constraintTop_toTopOf="@id/textView92" />

                        <TextView
                            android:id="@+id/textView93"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/coco_gothic_bold"
                            android:text="Fuel Capacity : "
                            android:textColor="@color/login_credentials_heading"
                            android:textSize="14dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView92" />

                        <TextView
                            android:id="@+id/text_view_fuel_capacity_new_bike_details"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="TextView"
                            android:textColor="@color/color_575757"
                            android:textSize="12dp"
                            app:layout_constraintBottom_toBottomOf="@id/textView93"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/textView93"
                            app:layout_constraintTop_toTopOf="@id/textView93" />

